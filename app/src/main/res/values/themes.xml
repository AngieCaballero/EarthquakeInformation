<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EarthquakeInformation" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.EarthquakeInformation" parent="Base.Theme.EarthquakeInformation" />

    <!-- Text -->
    <style name="Title" parent="TextAppearance.AppCompat.Title" >
        <item name="android:textAlignment">center</item>
    </style>
    <style name="Body" parent="TextAppearance.AppCompat.Body1" />
    <style name="TextError" parent="Body">
        <item name="android:textColor">@color/design_default_color_error</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:text">@string/incorrect_data</item>
    </style>
    <style name="message_error_full_screen" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">22dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- CardView -->
    <style name="CardView.EarthquakeInformation" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">15dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Splash -->
    <style name="Theme.EarthquakeInformation.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/earthquake</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.EarthquakeInformation</item>
    </style>

</resources>